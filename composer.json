{
    "name": "jekk0/laravel-iso3166-validation-rules",
    "description": "Laravel/Lumen validation rules for validate country codes (ISO3166-1)",
    "keywords": [
        "php",
        "laravel",
        "lumen",
        "validation",
        "rules",
        "ISO3166",
        "ISO3166-1"
    ],
    "homepage": "https://github.com/jekk0/laravel-iso3166-validation-rules",
    "license": "MIT",
    "authors": [
        {
            "name": "jekk0",
            "homepage": "https://github.com/jekk0",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.2",
        "illuminate/contracts": "^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.68",
        "phpstan/phpstan": "^2.1",
        "infection/infection": "^0.27.11"
    },
    "autoload": {
        "psr-4": {
            "Jekk0\\Laravel\\Iso3166\\Validation\\Rules\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jekk0\\Laravel\\Iso3166\\Validation\\Rules\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "fixcs": "php-cs-fixer fix --diff --verbose",
        "infection": "infection --show-mutations",
        "phpstan": "phpstan analyze",
        "test": "phpunit"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
